<div class="container-xxl p-0 mt-5">
  <h1 class="text-center" style="padding-top: 4rem;">Bienvenue dans Gossips</h1>

  <% if params[:title] %>
    <div class="alert alert-success" role="alert">
      <p>Le Gossip <%= params[:title] %> a bien été créé</p>
    </div>
  <% end %>
  <%= link_to "Créer un nouveau Gossip", new_gossip_path %>
  <h3 class="py-5">Liste des Gossips</h3>
  <div class="row g-0">
    <% @gossips.reverse_each do |gossip| %>
      <div class="col-sm-4 p-1">
        <div class="card">
          <div class="card-header">
            <%= gossip.title %>
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><%= gossip.content %></p>
              <footer class="blockquote-footer">Un <%= link_to "Gossip", gossip_path(gossip.id) %> de <%= link_to "#{gossip.user.first_name}", user_path(gossip.user.id) %></footer>
            </blockquote>
          </div>
        </div>
      </div>
    <% end %>
  <div>
</div>
