<div class="container-xxl p-0 mt-5">
  <h1 class="text-center" style="padding-top: 4rem;">Bienvenue dans Gossips</h1>

  <% flash.each do |type, msg| %>
    <div class="alert alert-success" role="alert">
      <%= msg %>
    </div>
  <% end %>

  <%= link_to "CrÃ©er un nouveau Gossip", new_gossip_path %>
  <h3 class="py-5">Liste des Gossips</h3>
  <div class="row g-0">
    <% @gossips.reverse_each do |gossip| %>
      <div class="col-sm-4 p-1">
        <div class="card">
          <div class="card-header d-flex justify-content-between">
            <%= gossip.title %>
            <span><%= pluralize(gossip.comments.count, "commentaire") %></span>
            <span><%= pluralize(gossip.likes.count, "like") %></span>
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><%= gossip.content %></p>
              <footer class="blockquote-footer">
                Un <%= link_to "Gossip", gossip_path(gossip.id) %> de <%= link_to "#{gossip.user.first_name}", user_path(gossip.user.id) %>
                <%= link_to "Like", gossip_likes_path(gossip.id), method: 'post' %>
                <% if gossip.likes.any? %>
                  <%= link_to "Dislike", gossip_like_path(gossip.id, gossip.likes.last.id), method: 'delete' %>
                <% end %>
              </footer>
            </blockquote>
          </div>
        </div>
      </div>
    <% end %>
  <div>
</div>
