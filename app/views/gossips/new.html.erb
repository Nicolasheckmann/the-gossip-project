<div class="container-xxl p-0 mt-5">
  <h1 class="text-center" style="padding-top: 4rem;">Création du nouveau Gossip</h1>

  <% if @gossip && @gossip.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Titre' %>
    <%= text_field_tag 'title' %>
    <br /> <br />

    <%= label_tag 'Contenu' %>
    <%= text_area_tag 'content' %>
    <br /> <br />

    <%= submit_tag "Créer un nouveau Gossip" %>

  <% end %>
</div>