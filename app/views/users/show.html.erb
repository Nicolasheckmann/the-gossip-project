<div class="container-xxl p-0 mt-5">
  <h1 class="text-center" style="padding-top: 4rem;">Bonjour <%= @user.first_name %></h1>

  <h3 class="py-3">Profil de <%= @user.first_name%> <%= @user.last_name%> :</h3>
  <p><%= @user.description%> <br><br>
  Email : <%= @user.email%> <br>
  Age : <%= @user.age%> <br>
  Ville : <%= link_to "#{@user.city.name}", city_path(@user.city.id) %></p><br>

  <h4>Gossips de  <%= @user.first_name %> :</h4><br>
  <div class="row g-0">
      <% @user.gossips.reverse_each do |gossip| %>
        <div class="col-sm-12 p-1">
          <div class="card">
            <div class="card-header">
              <%= gossip.title %>
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p><%= gossip.content %></p>
                <footer class="blockquote-footer">Un <%= link_to "Gossip", gossip_path(gossip.id) %> de <%= link_to "#{gossip.user.first_name}", user_path(gossip.user.id) %></footer>
              </blockquote>
            </div>
          </div>
        </div>
      <% end %>
    <div>
</div>

