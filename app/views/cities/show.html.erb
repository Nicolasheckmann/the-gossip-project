<div class="container-xxl p-0 mt-5">
  <h1 class="text-center" style="padding-top: 4rem;"><%= @city.name %></h1>

  <div class="row g-0">
    <% gossips_array = [] %>
    <% @city.users.each { |user| gossips_array << user.gossips } %>
      <% gossips_array.flatten.sort_by { |gossip| gossip.updated_at}.reverse_each do |gossip|%>
        <div class="col-sm-4 p-1">
          <div class="card">
            <div class="card-header">
              <%= gossip.title %>
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p><%= gossip.content %></p>
                <footer class="blockquote-footer">Un <%= link_to "Gossip", gossip_path(gossip.id) %> de <%= link_to "#{gossip.user.first_name}", user_path(gossip.user.id) %></footer>
              </blockquote>
            </div>
          </div>
        </div>
      <% end %>
  <div>
</div>